<div class="container">

  <h1><%= @task.title %></h1>

  <div class="task-details">
    <%= @task.details %> 
  </div>

  <% if @task.completed == true %>
    <input type="checkbox" checked="checked" name="checkbox">
    <label for="checkbox">This task is completed</label>
  <% else %>
    <%# <input type="checkbox"  name="checkbox"> %>
    <label for="checkbox" id="completed">This task is not completed</label>
  <% end %>
  <br>

  <%= link_to "Edit task", edit_task_path(@task), class: "btn btn-primary link"  %>
  <%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary link"  %>
  <%= link_to "Back to tasks", tasks_path, class: "btn btn-primary link"  %>


</div>